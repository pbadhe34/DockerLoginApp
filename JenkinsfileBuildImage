pipeline {
     agent {
    // Equivalent to "docker build -f Dockerfile-login --build-arg version=1.0.2 ./build/

    dockerfile {
        filename 'Dockerfile-login'
        dir '.'
        label 'master'
        additionalBuildArgs  '--build-arg version=1.0.2'
        args '-t login-app -v /tmp:/tmp'
    }
 }
  stages {
     stage('Image build') {
      steps {
                  
            echo "Build image" 
      } 
    }
 }

}
 
